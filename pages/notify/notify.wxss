.top-tab{
  width: 750rpx; height: 100rpx;
  background:#298DE5; color: #8ccefd;
  line-height: 100rpx;font-size: 28rpx;
  box-shadow: 0 2px 2px #bebebe;
}
.toptab.active{
  border-bottom: 2px solid #fff;
  color:#fff;
}
.unread{
  color: #9a9c9b;
  width:670rpx; padding:10rpx 40rpx;
  vertical-align: middle;
}
.unread text{
  font-size:22rpx;
}
.unread image{
  width: 50rpx; height: 50rpx;
  vertical-align: middle; float: right;
}
.notify-item{
  width: 670rpx; height: 120rpx; padding: 20rpx 40rpx;
  background:#fff; border-bottom: 1px solid #eee;
}
.notify-item image{
  width: 80rpx; height: 80rpx;
  border-radius: 80rpx; padding:10rpx;
}
.notify-item .notify-content{
  color: #9a9c9b; font-size: 28rpx; text-align: left;
}
.notify-item .notify-content .notify-source{
  color: #777777; display: block;
}
